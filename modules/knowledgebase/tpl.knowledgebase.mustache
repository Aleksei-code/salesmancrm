										<a href="javascript:void(0)" onclick="editKb('{{id}}','pin');" title="Закрепить" class="gray red"><i class="icon-star-empty red"></i></a>
									{{/pin}}
								{{/change}}
								<a href="javascript:void(0)" onclick="editKb('{{id}}','open');" title="В новом окне" class="gray green"><i class="icon-print blue"></i></a>
								{{#change}}
									<a href="javascript:void(0)" onClick="editKb('{{id}}','edit');" title="Изменить" class="gray blue"><i class="icon-pencil"></i></a>
