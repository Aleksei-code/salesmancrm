							{{/undo}}
							{{#undonotaccess}}
								<a href="javascript:void(0)" title="У вас нет достаточных прав. Отменить платеж"><i class="icon-ccw gray"></i></a>
							{{/undonotaccess}}
						{{/rights}}
					</div>
				</td>
			</tr>
			</tbody>
			<tr class="th5 transparent hidden-iphone">
				<td colspan="5"></td>
			</tr>
		{{/credit}}
	</table>

