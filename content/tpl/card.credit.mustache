							{{#undonotaccess}}
							<a href="javascript:void(0)" title="У вас нет достаточных прав. Отменить платеж"><i class="icon-ccw gray"></i></a>
							{{/undonotaccess}}
						{{/rights}}
					</span>
				</td>
			</tr>
			<tr class="th30 credit border-bottom1 mb5 bgwhite">
				<td class="wp20">
					<div class="fs-14 flh-14"><b>Счет №{{invoice}}</b></div>
					<div><span class="fs-09 mt5">от {{date}}</span></div>
				</td>
				<td class="text-right">
					<div class="fs-14 flh-14"><b>{{summaf}}</b></div>
					<div><span class="fs-09 mt5">НДС {{ndsf}}</span></div>
					{{#iscurrency}}<div class="fs-11 flh-12">В валюте: <b class="blue">{{incurrency}}</b></div>{{/iscurrency}}
				</td>
				<td class="text-right wp20">
					{{^isdo}}
						<div class="fs-14 flh-14"><b class="red">{{dateplan}}</b></div>
						<div><span class="fs-09 mt5">Ожидаемая дата</span></div>
					{{/isdo}}
					{{#isdo}}
					<div class="fs-14 flh-14"><b class="green">Оплачен</b></div>
					<div><span class="fs-09 mt5">{{datefact}}</span></div>
					{{/isdo}}
				</td>
				<td class="text-right wp15">
					{{^isdo}}
						{{#status.overdue}}
							<div class="fs-14"><b class="red">{{days}}</b> дн.</div><span class="fs-09 mt5">Просрочено</span>
						{{/status.overdue}}
