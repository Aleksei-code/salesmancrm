								{{/change}}

							</div>
						</div>
					</TD>
				</TR>
			{{/show}}

		{{/list}}
	</TABLE>

		{{^list}}

		<div id="emptymessage" class="gray miditxt text-center">
			<i class="icon-graduation-cap-1 icon-3x gray"></i><br><b class="red">Упс.</b>&nbsp;&nbsp;<b>Нет доступных знаний</b>
		</div>

		{{/list}}

	<div style="height:45px;"></div>

</script>