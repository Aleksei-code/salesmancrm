						{{#isStart}}<span class="fs-07 gray2">Начат {{isStart}}</span>{{/isStart}}
						{{#isEnd}}<span class="fs-07 gray2">Закончен {{isEnd}}</span>{{/isEnd}}
					</span>
				</span>
				</a>
			{{/materials}}

			{{#haveTask}}
				<div class="menudivider m0 text-center"><b>Задания</b></div>
			{{/haveTask}}

			{{#tasks}}
				<a href="#{{slide}}" class="menu {{#isEnd}}greenbg-lite2{{/isEnd}}" title="{{title}}: {{name}}" data-id="{{id}}" data-type="task" data-slide="{{slide}}" id="slide">
					<span class="flex-container float pt5 pb5">
						<span class="flex-string w30"><i class="{{icon}}"></i></span>
						<span class="flex-string float flh-10 pt2">
							<div>{{#isEnd}}<i class="icon-ok green"></i> {{/isEnd}}{{name}}</div>
							{{#isStart}}<span class="fs-07 gray2">Начат {{isStart}}</span>{{/isStart}}
							{{#isEnd}}<span class="fs-07 gray2">Закончен {{isEnd}}</span>{{/isEnd}}
						</span>
					</span>
				</a>
			{{/tasks}}


		</div>

		{{/lecturelist}}

</script>

