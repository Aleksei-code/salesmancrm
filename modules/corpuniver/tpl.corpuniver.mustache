<script id="corpuniverTpl" type="text/html">

	<TABLE class="top">
		{{#list}}

			<TR class="ha hand th60 messagelist" data-id="{{id}}" onclick="editCourse('{{id}}','viewshort');" title="Просмотр">
				<TD>

					<div class="pl10 mp0">

						<div class="mb10">

							<div class="fs-07 gray2 mb10">{{date_edit}}</div>

							<B class="blue fs-14">{{name}}</B>

						</div>

						{{{content}}}

						<div class="mt10 mb10 fs-09 gray2">
							<i class="icon-user-1 blue" title="Автор"></i>{{author}},
							<i class="icon-folder-open blue" title="Раздел"></i>{{category}}
						</div>

						<div class="progressbarr wp100">
							<div id="test" class="progressbar-completed progress-greenplus" style="width:{{progress}}%;" title="{{progress}}%">
