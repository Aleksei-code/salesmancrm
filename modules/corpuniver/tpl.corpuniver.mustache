								<a href="javascript:void(0)" data-tip="course" data-id="{{id}}" title="Удалить" class="gray red deleteItem"><i class="icon-cancel-circled"></i></a>
							{{/change}}

						</div>
					</div>
				</TD>
			</TR>

		{{/list}}
	</TABLE>

		{{^list}}

		<div id="emptymessage" class="gray miditxt text-center">
			<i class="icon-graduation-cap-1 icon-3x gray"></i><br><b class="red">Упс.</b>&nbsp;&nbsp;<b>Нет доступных курсов</b>
		</div>

		{{/list}}

	<div style="height:45px;"></div>

</script>

<script id="courseListTpl" type="text/html">

		{{#lecturelist}}

		<h3 class="m0" aria-selected="true" aria-expanded="true" role="tab" data-id="base">
			<a href="javascript:void(0)" class="shado flh-10" data-type="lection">
				<span class="block fs-07 black uppercase">{{title}}</span>
				{{lecture}}
			</a>
		</h3>
		<div id="matlec" data-id="base" data-lec="{{num}}">

			{{#materials}}
				<a href="#{{slide}}" class="menu {{#isEnd}}greenbg-lite2{{/isEnd}}" title="{{name}}" data-id="{{id}}" data-type="material" data-slide="{{slide}}" id="slide">
				<span class="flex-container float pt5 pb5">
					<span class="flex-string w30"><i class="{{icon}} blue"></i></span>
