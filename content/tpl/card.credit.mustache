<div class="fcontainer1">

	<table id="" class="credit mrowtable nomob">
		{{#credit}}
			<tbody class="focused box-shadow {{#isdo}}gray{{/isdo}}">
			<tr class="th40 graybg-sub" data-crid="{{crid}}" data-user="{{iduser}}">
				<td colspan="5" class="text-right">
					<div class="gray fs-09 pull-left">
						Квота по счету: <b class="blue">{{user}}</b>
					</div>
					<span class="hidden-iphone buttons">
						{{#rights}}
							{{^isdo}}
							{{#check}}
								<a href="javascript:void(0)" onclick="cf=confirm('Вы действительно хотите поставить отметку о поступлении платежа?');if (cf)editCredit('{{crid}}','credit.doit');" title="Отметить о поступлении оплаты" class="green"><i class="icon-ok"></i>Провести оплату</a>
							{{/check}}
							{{^check}}
								<a href="javascript:void(0)" title="У вас нет достаточных прав. Отметить о поступлении оплаты" class="gray"><i class="icon-cancel-circled"></i>Провести оплату</a>
							{{/check}}
							{{/isdo}}
							{{#email}}
								<a href="javascript:void(0)" onclick="editCredit('{{crid}}','invoice.mail');" title="Отправить счет по Email"><i class="icon-mail broun"></i></a>
							{{/email}}
							{{#print}}
								<a href="javascript:void(0)" onclick="editCredit('{{crid}}','invoice.print');" title="Получить счет"><i class="icon-print green"></i></a>
							{{/print}}
							{{#edit}}
								<a href="javascript:void(0)" onclick="editCredit('{{crid}}','credit.edit');" title="Изменить"><i class="icon-pencil blue"></i></a>
